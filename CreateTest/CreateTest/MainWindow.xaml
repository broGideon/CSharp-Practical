<Window x:Class="CreateTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateTest"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="Pink"
        Title="Аунтификация" Height="350" Width="250">
        
    <Grid Name ="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Дароу. Ты хочешь пройти тест или редактировать его?" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" FontSize="13"  Margin ="0,9,0,0"/>
        <Button Grid.Row = "1" Content="Я хотю пройти тест" Margin="10, 0"  FontWeight="Bold" Height="40" FontSize="13" Click="Button_Click_1"/>
        <Button Grid.Row = "2" Content="Я хотю редактировать тест" Margin="10, 0" FontWeight="Bold"  Height="40" FontSize="13" Click="Button_Click"/>
    </Grid>
</Window>
